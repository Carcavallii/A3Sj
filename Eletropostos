    private void buscarButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        String regiaoSelecionada = (String) regioesComboBox.getSelectedItem();
        if (regiaoSelecionada != null && !regiaoSelecionada.isEmpty()){
            if (regiaoSelecionada.equals("Zona sul")) {
                TelaEletropostoSul TES = new TelaEletropostoSul();
                TES.setVisible(true);
                this.dispose();
                
            } else if (regiaoSelecionada.equals("Zona leste")) {
                TelaEletropostoLeste TEL = new TelaEletropostoLeste();
                TEL.setVisible(true);
                this.dispose();
                
            } else if (regiaoSelecionada.equals("Zona Norte")){
                TelaEletropostoNorte TEN = new TelaEletropostoNorte();
                TEN.setVisible(true);
                this.dispose();
                
            } else if (regiaoSelecionada.equals("Zona Oeste")) {
                TelaEletropostoOeste TEO = new TelaEletropostoOeste();
                TEO.setVisible(true);
                this.dispose();
                
            }
        }
           
                
    }                                            

