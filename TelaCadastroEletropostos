    private void sairButtonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        Eletropostos TA = new Eletropostos();
        TA.setVisible(true);
        this.dispose();
    }                                          

    private void cadastrarButtonActionPerformed(java.awt.event.ActionEvent evt) {                                                
       EletropostoDAO p = new EletropostoDAO();
        String eletroposto = nomeTextField.getText();
        String regiao = regiaoTextField.getText();
        String endereco = enderecoTextField.getText();
        if (eletroposto.isEmpty() || regiao.isEmpty() || endereco.isEmpty()) {
            JOptionPane.showMessageDialog(null, "Preencha todos os campos obrigatórios.");
            return;
        }
        
        try {
            p.setEletroposto(eletroposto);
            p.setRegiao(regiao);
            p.setEndereço(endereco);
            p.cadastrarEletroposto();
            JOptionPane.showMessageDialog(null, "Cadastrado com sucesso");
        } catch (Exception e)  {
            JOptionPane.showMessageDialog(null, "Problemas técnicos. Tente novamente mais tarde");
                e.printStackTrace();
        }
        TelaAdm TA = new TelaAdm();
        TA.setVisible(true);
    }                                               

