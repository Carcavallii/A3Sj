        TA.setVisible(true);
    }                                          

    private void attButtonActionPerformed(java.awt.event.ActionEvent evt) {                                          
        int codigo = Integer.parseInt(idTextField.getText());
        String novoNome = nomeTextField.getText();
        String novoSenha = senhaPasswordField.getText();
        if (novoNome.isEmpty() || novoSenha.isEmpty()) {
            JOptionPane.showMessageDialog(null, "Preencha todos os campos obrigatórios.");
            return;
        }

        try {
            DAO DAO = new DAO();
            DAO.setCodigo(codigo);
            DAO.setNome(novoNome);
            DAO.setSenha(novoSenha);
            DAO.atualizarUsuario();
            JOptionPane.showMessageDialog(null, "Atualizado com sucesso");
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, "Problemas técnicos. Tente novamente mais tarde");
            e.printStackTrace();
        }


    }                                         

