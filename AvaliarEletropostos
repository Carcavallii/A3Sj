    private void gosteiButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        AvaliacaoDAO DAO = new AvaliacaoDAO();
        int idItemAvaliado = 1; // Substitua pelo id do item avaliado
        try {
            DAO.atualizarAvaliacao(idItemAvaliado, true);
        } catch (Exception ex) {
            Logger.getLogger(AvaliarEletropostos.class.getName()).log(Level.SEVERE, null, ex);
        }
        JOptionPane.showMessageDialog(null, "Obrigado pela avaliação");
        this.dispose();
    }                                            

    private void deslikeButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        AvaliacaoDAO DAO = new AvaliacaoDAO();
        int idItemAvaliado = 1; // Substitua pelo id do item avaliado
        try {
            DAO.atualizarAvaliacao(idItemAvaliado, false);
        } catch (Exception ex) {
            Logger.getLogger(AvaliarEletropostos.class.getName()).log(Level.SEVERE, null, ex);
        }
        JOptionPane.showMessageDialog(null, "Obrigado pela avaliação");
        this.dispose();
    }                                             

